# ============================================
# ANHA Trading - Environment Configuration
# ============================================

# ------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------
# Option 1: SQLite (for local development)
DATABASE_URL="sqlite+aiosqlite:///./dev.db"

# Option 2: PostgreSQL (for production)
# DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/anha_db"

# PostgreSQL Connection Options (optional)
# DB_CONNECT_TIMEOUT_SECONDS=30
# DB_CONNECT_SSL=true

# ------------------------------------------
# SECURITY
# ------------------------------------------
# Generate a strong secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="change-me-to-a-strong-secret-key"

# ------------------------------------------
# APP SETTINGS
# ------------------------------------------
APP_NAME="ANHA Trading"
ENVIRONMENT="development"  # Options: development, staging, production
BASE_URL="http://localhost:8000"

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=720
RESET_TOKEN_EXPIRE_MINUTES=30

# Auto-create database tables on startup
AUTO_CREATE_DB=true

# ------------------------------------------
# TESTING (optional)
# ------------------------------------------
# TEST_DATABASE_URL="sqlite+aiosqlite:///./test.db"
# ------------------------------------------

# SMTP / EMAIL CONFIGURATION
# ------------------------------------------
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT=587
SMTP_USER="info@inha.sa"
SMTP_PASSWORD="your-secure-password"
SMTP_FROM_EMAIL="info@inha.sa"
SMTP_TLS=true